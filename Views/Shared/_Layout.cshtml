
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lip/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @*Start Header*@
    <header>
        <nav class="mt-5">

            @* <a href="/Home/Index" class="btn btn-primary m-2">Home</a>*@ 
           @*@Html.ActionLink(linkText: "Home", actionName: "Index", controllerName: "Home", htmlAttributes: new {@class= "btn btn-primary m-2 "})*@ 
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-2"></a>
